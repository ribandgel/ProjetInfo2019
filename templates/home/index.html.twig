{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div id="myCarousel" class="carousel slide container justify-content-center p-3" data-ride="carousel">

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="images/wineyard2.jpg" alt="First slide">
                <div class="carousel-caption d-none d-md-block txt-slide1-2" id="txt-slide1">
                    <h4>Sommelière</h4>
                    <p>J’épaule les professionnels dans leur sélection.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="images/slide-2.jpg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block txt-slide1-2">
                    <h4>Formatrice</h4>
                    <p>Je forme leurs salariés pour la commercialisation des vins.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="images/logos.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
{% endblock %}
